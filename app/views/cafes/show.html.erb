<%= render '/shared/back_button' %>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src=<%= "https://source.unsplash.com/1600x1400/?#{@cafe.category},cafe" %> alt="Food">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src=<%= "https://source.unsplash.com/1600x1400/?#{@cafe.category},food" %> alt="Lights">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src=<%= "https://source.unsplash.com/1600x1400/?#{@cafe.category},room" %> alt="Music">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <div class="cafe-name"><%= @cafe.name %></div>
  <div class="cafe-rating">
    <span class="stars"> <% @rating.times do  %>
      <i class="fas fa-star"></i>
    <% end %>
    </span>
    <span class="empty-stars"><% @empty_stars.times do %>
      <i class="far fa-star"></i>
      <% end %>
    </span>
  </div>

  <div class="cafe-tags d-flex flex-wrap">
    <% @cafe.cafe_tags.each do |cafetag| %>
      <% if cafetag.tag.tag_category == "ambience" %>
        <div class="small-tag mr-2 mb-2"><%= cafetag.tag.name %></div>
      <% end %>
    <% end %>
  </div>
  <div class="cafe-address"><strong>Address</strong>: <%= @cafe.address %></div>
  <div class="cafe-description"><%= @cafe.description %></div>

  <div class="cafe-amenities">
  <p class="show-heading">Amenities</p>
    <% @cafe.cafe_tags.each do |cafetag| %>
      <% if cafetag.tag.tag_category == "amenity" %>
        <div>+ <%= cafetag.tag.name.capitalize %></div>
      <% end %>
    <% end %>

  </div>

  <div class="cafe-reviews">
    <p class="show-heading">Reviews</p>
    <% @cafe.reviews.each do |review| %>
    <div class="rating-name">
      <p><% review.rating.times do  %>
        <i class="fas fa-star"></i>
      <% end %>
      <% (5 - review.rating).times do %>
        <i class="far fa-star"></i>
      <% end %>
      </p>
      <p><%= review.user.first_name %> <%= review.user.last_name %></p>
    </div>
    <p><%= review.content %></p>
    <% end %>
  </div>
  <p class="show-heading">Location</p>
  <div
    id="map"
    style="width: 100%;
    height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    >
  </div>

