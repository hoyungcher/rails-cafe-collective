<div class="container dashboard">
  <h1>Welcome <%= @user.first_name %></h1>
  <p>What do you want to do today?</p>

  <div class="cafes-div my-3">
    <h5>Your cafes:</h5>
    <%= link_to new_user_cafe_path(current_user) do %>
    <div class='add-cafe'><i class="fas fa-plus"></i> Add a new Cafe </div>
    <% end %>
    <% @cafes.each do |cafe| %>
      <div class="card-cafe mb-2">
        <% if cafe.tags.empty? %>
          <img src="https://source.unsplash.com/1600x900/?<%= cafe.category %>, cafe" alt="Card image cap" />
        <% else %>
          <img src="https://source.unsplash.com/1600x900/?<%= cafe.tags.first.name %>, cafe" alt="Card image cap" />
        <% end %>


        <div class="card-cafe-infos align-items-center">
          <div class="cafe-name-description">
            <h3 class="card-cafe-pricing my-1"><%= link_to cafe.name, cafe_path(cafe) %></h3>
            <h3 class="card-cafe-pricing my-1"><%= cafe.address %></h3>
            <div class="menu-seats">
              <%= link_to root_path do %>
                <h4 class='my-1 view-menu'>View Menu</h4>
              <% end %>
              <%= link_to root_path class: 'my-1' do %>
                <h4 class='my-1 set-seats'><%= link_to "Set seats & availabilities", new_user_cafe_hourly_slot_path(current_user, cafe) %></h4>
              <% end %>
            </div>
           </div>



          <div class="cafe-edit-delete">
            <%= link_to edit_user_cafe_path(@current_user, cafe) do %>
            <i class="fas fa-edit"></i>
            <% end %>

            <%= link_to user_cafe_path(@current_user, cafe), data: { confirm: 'Are you sure?' }, method: :delete do %>
             <i class="far fa-trash-alt"></i>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
